{
  "name": "salesmaster",
  "version": "1.0.0",
  "description": "Modern React Sales Training Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "run-p dev:backend dev:frontend",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:backend": "npm --prefix backend run dev",
    "build": "npm run build:frontend && npm run build:backend && npm run build:function",
    "build:frontend": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run build",
    "build:function": "node build-function.js",
    "start": "npm --prefix backend run start",
    "install:all": "npm install && npm --prefix frontend install && npm --prefix backend install"
  },
  "keywords": [
    "sales",
    "training",
    "react",
    "express",
    "verkaufsschulung"
  ],
  "author": "SalesMaster",
  "license": "MIT",
  "devDependencies": {
    "baseline-browser-mapping": "^2.9.19",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5"
  }
}
