{
  "name": "salesmaster",
  "version": "1.0.0",
  "description": "Modern React Sales Training Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:backend": "npm --workspace backend run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm --workspace frontend run build",
    "build:backend": "npm --workspace backend run build",
    "start": "npm --workspace backend run start",
    "install:all": "npm install && npm --workspace frontend install && npm --workspace backend install"
  },
  "keywords": [
    "sales",
    "training",
    "react",
    "express",
    "verkaufsschulung"
  ],
  "author": "SalesMaster",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
